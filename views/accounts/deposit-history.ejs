<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>bigmumbai</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            overflow-y: scroll!important;
        }

        .deposit-title {
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.5rem;
            color: #333;
            animation: fadeInTitle 1s ease-in-out;
        }

        /* Glassmorphism Table Container */
        .table-container {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 90%;
            max-width: 800px;
            margin: 0 auto;
            animation: fadeInContainer 0.8s ease-in-out;
        }

        /* Responsive Table */
        .deposit-table {
            width: 100%;
            border-collapse: collapse;
            text-align: left;
            border: 2px solid white;
        }

        .deposit-table th,
        .deposit-table td {
            padding: 12px 20px;
            border: 2px solid white;
            background-color: skyblue;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .deposit-table th {
            color: #fff;
            font-weight: bold;
            background-color: orange;
            /* Sky blue background for the table header */
        }

        .container {
            width: 90%;
            max-width: 900px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.15);
            /* Frosted glass effect */
            background-color: orange;
            border-radius: 20px;
            backdrop-filter: blur(10px);
            /* Blur for glass effect */
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            /* Softer shadow */
            border: 2px solid rgba(255, 255, 255, 0.5);
            /* Border with more opacity */
            margin: 50px auto;
        }

        .deposit-table td {
            color: #fff;
            font-size: 0.9rem;
        }

        .deposit-table tbody tr {
            transition: background-color 0.3s ease-in-out;
        }

        .deposit-table tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* Glassmorphism Effect */
        .deposit-table th,
        .deposit-table td {
            backdrop-filter: blur(10px);
            border-radius: 5px;
        }

        /* Center Table in Page */
        .table-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        /* Animation for Rows */
        .fade-in-row {
            opacity: 0;
            animation: fadeInRow 0.5s ease-in-out forwards;
        }

        /* Keyframes for Animations */
        @keyframes fadeInContainer {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInTitle {
            0% {
                opacity: 0;
                transform: translateY(-30px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInRow {
            0% {
                opacity: 0;
                transform: translateY(15px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @media screen and (max-width: 600px) {
            .deposit-title {
                font-size: 1.5rem;
            }

            .deposit-table th,
            .deposit-table td {
                padding: 8px 12px;
            }

            .table-container {
                padding: 15px;
            }
        }
    </style>

</head>

<body>
    <div class="container">
        <h1 class="deposit-title">Deposit History</h1>
        <div class="table-container">
            <table class="deposit-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Transaction ID</th>
                        <th>Amount (₹)</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% deposits.forEach(deposit=> { %>
                        <tr class="fade-in-row">
                            <td>
                                <%= deposit.date.toLocaleString() %>
                            </td>
                            <td>
                                <%= deposit.transactionId %>
                            </td>
                            <td>₹<%= deposit.amount %>
                            </td>
                            <td>
                                <%= deposit.status %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <%-include("../partials/custom-footer.ejs")%>
</body>

</html>